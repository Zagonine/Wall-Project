{% extends "::base.html.twig" %}

{% block title %}The Wall Project{% endblock %}

{% block body %}

    <div>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <div class="text-right">
            <input type="submit" value="Publier" class="btn btn-success"/>
        </div>
        {{ form_end(form) }}
    </div>

    {% for post in posts %}
        <div>
            <small class="text-muted">{{ post.pseudo }}, le {{ post.datePosted | date("m/d/Y") }} | Cat√©gorie(s) :
                {% for category in post.categories %}
                    {{ category.name }}{% if not loop.last %},{% endif %}
                {% endfor %}
            </small>
            <br>
            {{ post.content }}
        </div>
        {% if not loop.last %}
            <hr>
        {% endif %}
    {% endfor %}

{% endblock %}
